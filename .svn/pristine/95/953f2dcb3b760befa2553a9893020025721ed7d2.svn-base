page .page{
  background-color: #f1f0f5;
  width: 100%;
  font-size: 30rpx;
}
.page .p-tops{
  width: 100%;
  position: relative;
  text-align: center;
  color: #ffffff;
  background: url('https://service.51bjhzy.com/api/StaticFile/weChatImage/disekuai@3x.png') no-repeat;
  background-size: 100% 100%;
}
.p-tops .backimg{
  width: 100%;
}
.p-tops .headimg{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin-top: 80rpx;
}
.message{
  margin: 20rpx 120rpx 0;
  padding-bottom: 42rpx;
}
.page .p-content{
  padding: 0 20rpx;
}
.p-content .tuwen-content{
  background: #ffffff;
  margin-top: 12rpx;
}
.tuwen{
  text-align: center;
  font-weight: 600;
  padding: 30rpx 0;
}
.tuwen-pay{
  padding: 32rpx 40rpx;
  border-top: 1px solid #F1F0F5;
}
.tuwen-pay .payone{
  vertical-align: middle;
  margin-bottom: 40rpx;
}
.tuwen-pay .paytwo{
  vertical-align: middle;
}
.tuwen-pay .skill{
  display: inline-block;
  padding: 16rpx;
  border: 2rpx solid #F1F0F5;
  border-radius: 8rpx;
  margin: 0 24rpx 24rpx 0;
}
.btnsecond{
  text-align: center;
  padding: 30rpx 0;
  border-top: 1px solid #F1F0F5
}
button[type=warn] {
  color:#FFFFFF;
  background-color:#d74326;
}
.name{
  margin-top: 20rpx;
  position: relative;
}
.word{
  width: 50%;
  text-align: right;
}
.yrz{
  width: 100rpx;
  margin: 12rpx 0 0 20rpx;
  position: absolute;
}


