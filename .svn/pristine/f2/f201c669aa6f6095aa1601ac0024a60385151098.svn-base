.pages{
  height: 80%;
}
.im-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 3;
  /* height: 319rpx; */
}
.im-bottom .im-left{
  width:100%;
  background-color: #f4f4f6;
  height: 98rpx;
  border:2rpx solid #e5e5e7;
}
.im-left .img-left{
  width:64rpx;
  height:64rpx;
  display:inline-block;
  position:absolute;
  left:16rpx;
  top:20rpx;
}
.img-left image{
  width: 100%;
  height: 100%;
}
.im-left .im-center{
  border:2rpx solid #e5e5e7;
  width:568rpx;
  display:inline-block;
  height:70rpx;
  position:absolute;
  top:14rpx;
  left:88rpx;
  border-radius:12rpx;
  background:#ffffff;
}
.im-left .im-right{
  width:64rpx;
  height:64rpx;
  display:inline-block;
  position:absolute;
  top:20rpx;
  right:16rpx;
}
.im-bottom .addtext{
  background:#f4f4f6;
  width:100%;
  height:100%;
  padding:40rpx 52rpx;
  text-align:center;
  display: flex;
  flex-direction:row;
}
.main {
  /* main绝对定位，进行内部滚动 */
  /* position: absolute; */
  /* top: 0; */
  /* bottom: 34rpx; */
  width: 100%;
  /* height: 200rpx; */
  /* 使之可以滚动 */
  overflow-y: scroll;
  /* 增加该属性，可以增加弹性，是滑动更加顺畅 */
  -webkit-overflow-scrolling: touch;   
}
.content {
  /* height: 2000rpx; */
  overflow-y: scroll;
}

