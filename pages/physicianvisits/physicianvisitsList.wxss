}

.titles::before {
  position: relative;
  top: 2rpx;
  width: 0;
  content: '';
  display: inline-block;
  border-top: 16rpx solid transparent;
  border-left: 16rpx solid #d74326;
  border-right: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
}

.titles {
  font-size: 32rpx;
  color: #d74326;
